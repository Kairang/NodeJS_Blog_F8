<div class='mt-4'>
    <h3>Edit Course</h3>

    <form class='mt-4' style='width: 50%' method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Name</label>
            <input type='text' class='form-control' id='name' name='name' value='{{course.name}}' />
        </div>

        <div class='form-group'>
            <label for='desc'>Description</label>
            <textarea rows='4' class='form-control' id='desc' name='desc'>{{course.desc}}</textarea>
        </div>

        <div class='form-group'>
            <label for='videoId'>Video Id</label>
            <input type='text' class='form-control' id='videoId' name='videoId' value='{{course.videoId}}' />
        </div>

        <div class='form-group'>
            <label for='level'>Level</label>
            <input type='text' class='form-control' id='level' name='level' value='{{course.level}}' />
        </div>

        <button type='submit' class='btn btn-primary'>Update</button>
    </form>
</div>